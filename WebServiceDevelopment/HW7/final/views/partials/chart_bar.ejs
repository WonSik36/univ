        scaleLabel: {
          display: true,
          labelString: "날짜",
        },
      }],
      yAxes: [{
      ticks:{beginAtZero:true}
      }]
    }
  };

  var lineChart = new Chart(myCanvas, {
    type: 'bar',
    data: chartData,
    options: chartOptions
  });
